#!/bin/sh
# Usage: bin/detect <build-dir>

if [ ! -f "$1"/bin/detect ]; then
    echo "Your bin/detect file was not found"
    ls -la "$1"/bin
fi

if [ ! -x "$1"/bin/detect ]; then
    echo "Your bin/detect is not executable"
    
    ls -la "$1"/bin
fi

echo "============="
ls -la "$1"/bin
cat "$1"/bin/detect


exec "$1"/bin/detect "$@"
